
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h3>Create your Account</h3>
            <form method="post" action="/account/signup" class="well">
                <input type="text" name="firstName" class="form-control" placeholder="First Name" />
                <br />
                <input type="text" name="lastName" class="form-control" placeholder="Last Name" />
                <br />
                <input type="text" name="email" id="email" class="form-control" placeholder="Email" />
                <span id="email-error" style="color: red; display: none;">Account already exists with that email</span>
                <br />
                <input type="password" id="pw" name="password" class="form-control" placeholder="Password" />
                <br />
                <input type="password" id="confirm" class="form-control" placeholder="Confirm your Password" />
                <span id="password-error" style="color: red; display: none;">Password mismatch</span>
                <br />
                <button class="btn btn-primary" disabled id="btn-submit">Sign up</button>
            </form>
    </div>
</div>

@section scripts{
<script src="~/Scripts/signUp.js"></script>
    }