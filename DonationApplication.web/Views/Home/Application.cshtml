
@using DonationApplication.data
@using DonationApplication.web.Models
@model ApplicationViewModel


<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h3>Apply </h3>
        <form method="post" action="/home/application" class="well">
            <select name="catId" id="category">
                <option value="0">-- SELECT A CATEGORY --</option>
                @foreach (Category cat in Model.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
            <br />
            <input type="text" name="amount" class="form-control" placeholder="How much?" />
            <br />
            <textarea name="description" class="form-control" placeholder="Description" rows="10"></textarea>
            <button class="btn btn-primary" id="btn-submit" disabled="disabled">Submit</button>
        </form>
    </div>
</div>


